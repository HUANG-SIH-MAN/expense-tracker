<div class="row mt-4">
  <div class="col-md-6 mx-auto">
      <div class="d-flex flex-column align-items-center mt-2">
         <h1>修改支出資料</h1>
        <span class="text-danger">*為必填欄位</span>  
      </div>
      <form action="/expense/edit/{{ expenseData._id }}?_method=PUT" method="POST">        
        <div class="form-group row mt-3">
            <label for="name" class="col-sm-2 col-form-label">名稱<span class="text-danger">*</span>：</label>
            <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" placeholder="支出名稱" value="{{ expenseData.name }}" required>
            </div>
        </div>
        <div class="form-group row mt-3">
            <label for="date" class="col-sm-2 col-form-label">日期<span class="text-danger">*</span>：</label>
            <div class="col-sm-10">
            <input type="date" class="form-control" id="date" name="date" value="{{ expenseData.date }}" required>
            </div>
        </div>
        <div class="form-group row mt-3">
            <label for="categoryId" class="col-sm-2 col-form-label">類別<span class="text-danger">*</span>：</label>
            <div class="col-sm-10">
              <select class="form-control" id="categoryId" name="categoryId" required>
                {{#each categoryData}}
                  <option value="{{this._id}}">{{this.name}}</option>
                {{/each}}
              </select>
            </div>
        </div>
        <div class="form-group row mt-3">
            <label for="amount" class="col-sm-2 col-form-label">金額<span class="text-danger">*</span>：</label>
            <div class="col-sm-10">
            <input type="number" class="form-control" id="amount" name="amount" min="0" placeholder="280" value="{{ expenseData.amount }}" required>
            </div>
        </div>        
        <button class="btn btn-outline-secondary btn-block mt-5" type="submit">修改</button>
        <a href="/" class="btn btn-outline-primary btn-block mt-2" type="button ">返回首頁</a>
      </form>
  </div>
</div>      